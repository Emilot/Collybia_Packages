pkgname=mpd-collybia-sacd
_pkgname=MPD
pkgver=0.22.0
pkgrel=9
pkgdesc='Flexible, powerful, server-side application for playing music. Experimental version with support of SACD ISO playback'
url='http://www.musicpd.org/'
license=('GPL')
arch=('armv7h' 'aarch64')
depends=('audiofile' 'avahi' 'curl' 'faad2' 'ffmpeg-collybia' 'icu' 'libcdio-paranoia' 'libid3tag' 'libmad' 'libmms' 'libmpdclient' 
'libsndfile' 'libupnp' 'libsoxr' 'libgme' 'sqlite' 'wavpack' 'zziplib')
makedepends=('boost' 'meson' 'python-sphinx')
provides=("mpd=$pkgver")
conflicts=('mpd' 'mpd-collybia' 'mpd-collybia-minimal')
source=('mpd::git+https://git.code.sf.net/p/sacddecoder/mpd/MPD.git#commit=d6421ced4ac484b5c89d63263ac5f2f64c243bfe'
        'tmpfiles.d'
        'sysusers.d'
        'mpd.conf')
sha256sums=('SKIP'
            '2faa85c12449a5b3ca422ff1c1fa06d057c7e262a74bfa6298c914a92d6f2e7a'
            '0b74c6e5db08daab3091dc15a6b0c75210ba2f9e98fa074f6cfd605a461056b6'
            'e590d98c0ab66b08427a92907bcc6aa69a6430689f1e1c07a7da4a480db5ac92')
backup=('etc/mpd.conf')

#pkgver() {
#  cd $_pkgname
#  printf "r%s.%s" "$(git rev-list --count HEAD)" "$(git rev-parse --short HEAD)"
#}

prepare() {
	cd "${srcdir}/mpd"
	rm -rf build
	install -d build
}


build() {
#	cd "${srcdir}/${_pkgname}"
        cd "${srcdir}/mpd/build"
	_opts=('-Ddocumentation=disabled'
	       '-Dzeroconf=avahi'
	       '-Dao=disabled'
	       '-Djack=disabled'
      	       '-Dmodplug=disabled'
               '-Dpulse=disabled'
               '-Dshout=disabled'
               '-Dsidplay=disabled'
               '-Dsoundcloud=disabled'
               '-Dopus=disabled'
	       '-Dvorbis=disabled'
               '-Drecorder=false'
	       '-Dipv6=disabled'
	       '-Dzzip=disabled'
               '-Doss=disabled'
               '-Dfluidsynth=disabled'
               '-Dgme=disabled'
               '-Dvorbisenc=disabled'
               '-Dlame=disabled'
               '-Dtwolame=disabled'
               '-Dwave_encoder=false'
               '-Dwildmidi=disabled'
               '-Dlibsamplerate=disabled'
	       '-Dcdio_paranoia=disabled'
	       '-Dmms=disabled'
	       '-Dnfs=disabled'
	       '-Dsmbclient=disabled'
	       '-Dhttpd=false'
	       '-Dmikmod=disabled'
	       '-Dmpg123=disabled'
	       '-Dchromaprint=disabled'
	       '-Dsndio=disabled' 
	       '-Dshine=disabled' 
	       '-Dopenal=disabled'
 	       '-Dadplug=disabled' 
 	       '-Dmpcdec=disabled' 
	       '-Dyajl=disabled'
	       '-Dqobuz=disabled'
	       '-Dtidal=disabled'
	       '-Dsacdiso=true'
	       '-Ddvdaiso=true'
               '-Dbzip2=enabled'
               '-Diso9660=enabled'
	       '-Dtremor=disabled' 
	)
	arch-meson  .. ${_opts[@]}
	ninja
}

package() {
#	cd "${srcdir}/${_pkgname}-${pkgver}/build"
	cd "${srcdir}/mpd/build"
	DESTDIR="${pkgdir}" ninja install
	
        install -Dm644 ../../mpd.conf "${pkgdir}"/etc/mpd.conf
	install -Dm644 ../../tmpfiles.d "${pkgdir}"/usr/lib/tmpfiles.d/mpd.conf
	install -Dm644 ../../sysusers.d "${pkgdir}"/usr/lib/sysusers.d/mpd.conf

	sed '/WantedBy=/c WantedBy=default.target' -i "${pkgdir}"/usr/lib/systemd/{system,user}/mpd.service
	sed '/ExecStart=/c ExecStart=/usr/bin/nice -n -16 /usr/bin/mpd --no-daemon' -i "${pkgdir}"/usr/lib/systemd/{system,user}/mpd.service
}
